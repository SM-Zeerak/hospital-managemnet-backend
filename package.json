{
    "name": "hospital-management-backend",
    "private": true,
    "type": "module",
    "workspaces": [
        "owner-api",
        "tenant-api",
        "school-api",
        "guards-api",
        "tour-api"
    ],
    "scripts": {
        "bootstrap": "pnpm install --workspace=owner-api && pnpm install --workspace=tenant-api",
        "lint": "echo \"TODO: add root lint script\"",
        "format": "echo \"TODO: add formatter\"",
        "report-tenant": "echo 'Did you mean register-tenant?'",
        "register-tenant": "pnpm --filter ./owner-api register-tenant",
        "register-tenant:owner": "pnpm --filter ./owner-api register-tenant",
        "lint:owner": "pnpm lint --workspace=owner-api",
        "lint:tenant": "pnpm lint --workspace=tenant-api",
        "format:owner": "pnpm format --workspace=owner-api",
        "format:tenant": "pnpm format --workspace=tenant-api",
        "dev:owner": "pnpm dev --workspace=owner-api",
        "dev:tenant": "pnpm dev --workspace=tenant-api",
        "start:owner": "pnpm start --workspace=owner-api",
        "start:tenant": "pnpm start --workspace=tenant-api",
        "build:owner": "pnpm build --workspace=owner-api",
        "build:tenant": "pnpm build --workspace=tenant-api",
        "dev:all": "pnpm dev:owner & pnpm dev:tenant"
    },
    "engines": {
        "node": ">=20.11.0",
        "pnpm": ">=9.15.2"
    }
}