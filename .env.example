# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
UI_ORIGIN=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database_name
PG_URL=postgresql://postgres:password@localhost:5432/guard_backend

# ============================================
# JWT Authentication Configuration
# ============================================
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production-min-32-chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_REFRESH_TTL=30d

# ============================================
# Cloudinary Configuration
# ============================================
CLOUDINARY_URL=https://api.cloudinary.com/v1_1/{cloudName}/image/upload
CLOUDINARY_UPLOAD_PRESET=xxxxx
CLOUDINARY_CLOUD_NAME=xxxxxxx
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
