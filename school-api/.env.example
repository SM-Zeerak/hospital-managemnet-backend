# ============================================
# HOSPITAL TENANT API CONFIGURATION
# ============================================

# Server Configuration
PORT=4002
NODE_ENV=development

# Tenant Identification (REQUIRED)
# Set this to switch between different hospitals
# After running owner-api seeders, you'll get tenant IDs for each hospital
# 
# Example Hospital IDs (from seeders):
# - Abdullah Hospital: <uuid-from-seeder-output>
# - Ramzan Hospital: <uuid-from-seeder-output>
#
# To switch hospitals, just change this TENANT_ID value
TENANT_ID=your-tenant-uuid-here

# Database Configuration
# Primary database (local) - REQUIRED for hospital operations
TENANT_PG_URL=postgres://postgres:password@localhost:5432/hospital_crm_tenant
# Secondary database (online) - OPTIONAL, used for sync, backup, and external access
# Will show error if not connected but won't fail server startup
TENANT_PG_URL_ONLINE=postgres://user:pass@online-host:5432/hospital_crm_tenant_online

# Redis Configuration (optional, for caching/sessions)
REDIS_URL=redis://localhost:6379

# JWT Secrets (REQUIRED)
JWT_ACCESS_SECRET=eb186bd9a0e267db5b042b52e7bf7f112b7525090fd952fbcc8ad3460a119a71ca5fc87f9148126564b3cc7744dd951f38caab5b1d803143244233acee0ade74
JWT_REFRESH_SECRET=59b9e4933a5f5ef2ffdf6e54b0e76d83be4f399fd13b8ebeec38719cc28441965a2533ca061bf05394a3c6c184ba061a9750c692f8cdde4b6a0b76f8a1f9c836

# CORS Origins
TENANT_UI_ORIGIN=http://localhost:3000
OWNER_UI_ORIGIN=http://localhost:3001

# Owner API Connection
OWNER_API_BASE=http://localhost:4001
TENANT_SYNC_WEBHOOK_TOKEN=ae766e3d475e555e7e6316767e58d542905501006b96816865fb4c529a303e71

# Socket.IO Configuration
TENANT_SOCKET_NAMESPACE=/app
OWNER_BRIDGE_SOCKET_ENABLED=false
OWNER_BRIDGE_HTTP_FALLBACK=true

# Note: 3rd party API keys (Google, etc.) are managed via Owner API routes
# Do not add them here - they are configured per-tenant through the Owner API

# Cloudinary Configuration (REQUIRED for staff images)
